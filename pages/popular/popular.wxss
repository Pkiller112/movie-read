#gun{
  height: 400rpx;
}
.roll_img{
    width: 100%;
    height: 100%;
}

.movie-list{
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 15rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}
.movie-list-li {
  width: 350rpx;
  height: 540rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border: 1px solid #e4e4e4;
  box-shadow: 0 20rpx 40rpx #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.item-top image{
    width: 350rpx;
}
.item-bottom{
  width: 300rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.item-bottom text{
    color: #e09015;
}

